@{
    ViewBag.Title = "SubRipForm";
}

@{
    if (!object.ReferenceEquals(null, ViewData.ModelState["Error"]))
    {
        <br />
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            @Html.ValidationMessage("Error")
        </div>
    }

    if (!object.ReferenceEquals(null, ViewData.ModelState["Sucesso"]))
    {
        <br />
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            @Html.ValidationMessage("Sucesso")
        </div>
    }

}

<h2>Subtitles Modifier</h2>

@using (Html.BeginForm("SubRipForm", "SubRip", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="container center_div">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <label class="control-label col-md-2">Arquivo: </label>
            <div class="col-md-10">
                <input type="file" name="file" />
                @{
                    if (!object.ReferenceEquals(null, ViewData.ModelState["FileError"]))
                    {
                        <br />
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">
                                <span aria-hidden="true">&times;</span>
                                <span class="sr-only">Close</span>
                            </button>
                            @Html.ValidationMessage("FileError")
                        </div>
                    }
                }
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Tempo: </label>
            <div class="col-md-10">
                <input type="number" name="offset" />
                @{
                    if (!object.ReferenceEquals(null, ViewData.ModelState["OffsetError"]))
                    {
                        <br />
                        <br />
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">
                                <span aria-hidden="true">&times;</span>
                                <span class="sr-only">Close</span>
                            </button>
                            @Html.ValidationMessage("OffsetError")
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modificar" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Open History", "SubRipHistory")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
